{
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitReturns": true,
      "esModuleInterop": true, 
      "noUnusedLocals": false,
      "outDir": "lib",
      "sourceMap": true,
      "strict": true,
      "target": "es2017",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "skipLibCheck": true
    },
    "compileOnSave": true,
    "include": [
      "src"
    ],
    "exclude": ["node_modules"]
  }
  